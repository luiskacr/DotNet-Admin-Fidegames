@model FideGames.Models.Users

@{
    ViewBag.Title = "EditarUsers";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@if (ViewBag.error == "" | ViewBag.error == null)
{

}
else
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <span class="aria-hidden">@ViewBag.error</span>
    </div>

}
<div class="card-body card shadow mb-4">
    <style>
        .card-title {
            padding-bottom: 15px;
            background: #040FD9;
            color: #fff;
            padding: 16px 30px;
            min-width: 100%;
            margin: -20px -25px 10px;
            border-radius: 3px 3px 0 0;
        }
    </style>
    <div class="card-title">
        <div class="row">
            <div class="col-sm-6">
                <h2>Editar Datos del Usuario</h2>
            </div>
        </div>
    </div>
    @using (Html.BeginForm("EditarUsers", "Users", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.userId)

            <div class="form-group">
                <label class="text-dark">Nombre de usuario</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="text-dark">Contraseña</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="text-dark">Usuarios Activos</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.user_active, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.user_active, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="text-dark">Imagen de usuario</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.userImage, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.userImage, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="text-dark">Nombre del empleado</label>
                <div class="col-md-10">
                    @Html.DropDownList("employeeId", null, htmlAttributes: new { @class = "custom-select my-1 mr-sm-2" })
                    @Html.ValidationMessageFor(model => model.employeeId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="text-dark">Rol asignado</label>
                <div class="col-md-10">
                    @Html.DropDownList("rol", null, htmlAttributes: new { @class = "custom-select my-1 mr-sm-2" })
                    @Html.ValidationMessageFor(model => model.rol, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Mostrar Lista de Usuario", "ListaUsers")
                </div>
            </div>

        </div>

    }
</div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
