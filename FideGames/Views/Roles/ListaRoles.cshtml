@model IEnumerable<FideGames.Models.Roles>

@{
    ViewBag.Title = "ListaRoles";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}@if (ViewBag.exito == "" | ViewBag.exito == null)
{

}
else
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <span class="aria-hidden">@Html.ViewBag.exito</span>
    </div>

}
@if (ViewBag.error == "" | ViewBag.error == null)
{

}
else
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert">x</button>
        <span class="aria-hidden">@ViewBag.error</span>
    </div>

}

<div class="card-body card shadow mb-4">
    <style>
        .table-title {
            padding-bottom: 15px;
            background: #040FD9;
            color: #fff;
            padding: 16px 30px;
            min-width: 100%;
            margin: -20px -25px 10px;
            border-radius: 3px 3px 0 0;
        }

            .table-title h2 {
                margin: 5px 0 0;
                font-size: 24px;
            }

            .table-title .btn-group {
                float: right;
            }

            .table-title .btn {
                color: #fff;
                float: right;
                font-size: 13px;
                border: none;
                min-width: 50px;
                border-radius: 2px;
                border: none;
                outline: none !important;
                margin-left: 10px;
            }
    </style>
    <div class="table-title">
        <div class="row">
            <div class="col-sm-6">
                <h2>Lista de roles del sistema</h2>
            </div>
            <div class="col-sm-6">
                @Html.ActionLink("Crear Rol", "CrearRol", null, new { @class = "btn btn-primary btn-lg" })
            </div>
        </div>

    </div>
    <div class="table-responsive">
        <table id="TableEmployee" class="table table-avance table-striped ">
            <thead class="table-dark">
                <tr>
                    <th class="">
                        Nombre de Rol
                    </th>
                    <th class="d-flex justify-content-center ">
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody class=" ">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.roleName)
                        </td>
                        <td class="d-flex justify-content-center ">
                            @Html.ActionLink("Editar", "EditarRol", new { id = item.rolId }, new { @class = "btn btn-primary mr-2" })
                            @Html.ActionLink("Detalles", "DetallarRol", new { id = item.rolId}, new { @class = "btn btn-primary mr-2" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
