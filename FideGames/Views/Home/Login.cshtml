@model FideGames.Models.Users
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPageOut.cshtml";
}

<div>
    <div class="card">
        <section class="vh-100" style="background-image: url(/Imagenes/login-background.jpg); background-repeat: no-repeat; background-size: cover ">
            <!-- Color:  background-color: #040FD9;-->
            <div class="container py-5 h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                        <div class="card shadow-2-strong" style="border-radius: 1rem;">
                            <div class="card-body p-5 text-center">

                                <img src="~/Imagenes/logofidegames.png" width="150" class="rounded mx-auto d-block" />
                                <h3 class="mb-5 text-dark">Iniciar Sesión</h3>
                                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-floating mb-3">
                                        @Html.TextBoxFor(m => m.userName, new { @class = "form-control form-control-lg", placeholder = "" })
                                        @Html.ValidationMessageFor(m => m.userName)
                                        <label for="userName">Usuario</label>
                                    </div>

                                    <div class="form-floating mb-3">
                                        @Html.PasswordFor(m => m.password, new { @class = "form-control form-control-lg" , placeholder = "" })
                                        @Html.ValidationMessageFor(m => m.password)
                                        <label for="password">Contraseña</label>
                                    </div>
                                    <div class="form-group">
                                        <font color="#FF0000">@ViewBag.Mensaje</font>
                                    </div>
                                    <div class="form-group mt-3">
                                        <button class="btn btn-primary btn-lg btn-block" type="submit">Ingresar</button>
                                    </div>

                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
